{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://browser-brain-loop.local/schemas/behavior-contract.schema.json",
  "title": "Behavior Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "intent",
    "context",
    "steps",
    "observables",
    "risk",
    "allowed_side_effects",
    "proof_requirements",
    "degrade_policy",
    "version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^BHV-[A-Z0-9-]+$"
    },
    "intent": {
      "type": "string",
      "minLength": 1
    },
    "context": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": true
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "observables": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "risk": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "allowed_side_effects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "proof_requirements": {
      "type": "object",
      "additionalProperties": false,
      "required": ["required_layers", "min_layers"],
      "properties": {
        "required_layers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["unit", "integration", "browser-cdp", "e2e"]
          }
        },
        "min_layers": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "degrade_policy": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": true
    },
    "rollback_or_compensation": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    }
  }
}
