{
  "id": "BHV-PANEL-ACTION-OPEN",
  "intent": "点击扩展 action 时应打开 side panel，并保持运行时可继续响应",
  "context": {
    "surface": "extension.action",
    "minimum_chrome_version": ">=120",
    "permission": "sidePanel"
  },
  "steps": [
    "extension_action_is_available",
    "user_clicks_extension_action",
    "runtime_issues_side_panel_open_request",
    "verify_panel_opened_for_current_tab"
  ],
  "observables": [
    "side_panel_visible_after_action_click",
    "runtime_remains_responsive_after_action_click"
  ],
  "risk": "low",
  "allowed_side_effects": [
    "chrome.sidePanel.open"
  ],
  "proof_requirements": {
    "required_layers": ["integration", "browser-cdp"],
    "min_layers": 2
  },
  "degrade_policy": {
    "max_consecutive_failures": 1,
    "on_trigger": [
      "retry_side_panel_open_once",
      "keep_action_click_safe_without_crash"
    ]
  },
  "rollback_or_compensation": [
    "action_click_failure_must_not_break_service_worker_loop"
  ],
  "version": "1.1.0"
}
